<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/p3"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/nameShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kaushan_script"
            android:text=" TASTY TAKE AWAY "
            android:textColor="@color/pink"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/handlee"
            android:text="Login to Your Account"
            android:textColor="@color/black_text"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="105dp"
            android:layout_height="111dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/profile1" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/comme_bold"
            android:text="Email"
            android:textColor="@color/black_text"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/comme_regular"
            android:gravity="center"
            android:hint="Enter Your Email"
            android:inputType="textPersonName"
            android:textColor="@color/pink"
            android:textColorHint="@color/placeholder"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:fontFamily="@font/comme_bold"
            android:text="Password"
            android:textColor="@color/black_text"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/comme_regular"
            android:gravity="center"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:textColor="@color/pink"
            android:textColorHint="@color/placeholder"
            android:textSize="20sp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="240dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:background="@drawable/main_button"
            android:fontFamily="@font/comme_bold"
            android:text="LOGIN"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/dontHaveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/comme_regular"
        android:textColor="@color/black_text"
        android:text="Don't Have an Account?"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom= "true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/createAccText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/comme_bold"
        android:text="Create New Account"
        android:textColor="@color/pink"
        android:textSize="24sp"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom= "true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>